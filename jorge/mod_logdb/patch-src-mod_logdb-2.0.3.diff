+delete_user_settings_int(DBRef, User, VHost) ->
+    Query = ["DELETE FROM ",settings_table(VHost)," ",
+                 "WHERE owner_id=(SELECT user_id FROM ",users_table(VHost)," WHERE username=\"",User,"\");"],
