+
+delete_stats_by_user_at_int(DBRef, User, VHost, Date) ->
+    SQuery = ["DELETE FROM ",stats_table(VHost)," ",
+                "WHERE owner_id=(SELECT user_id FROM ",users_table(VHost)," WHERE username=\"",User,"\") ",
+                  "AND at=\"",Date,"\";"],
+   case sql_query_internal(DBRef, SQuery) of
