+adhoc_local_items(Acc, From, #jid{lserver = LServer, server = Server} = To,
+                  Lang) ->
+    Items = case Acc of
+                {result, Its} -> Its;
+                empty -> []
+            end,
+    Nodes = recursively_get_local_items(LServer, "", Server, Lang),
+    Nodes1 = lists:filter(
