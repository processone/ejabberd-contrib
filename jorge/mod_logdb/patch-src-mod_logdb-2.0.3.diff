+    Fun =
+      fun() ->
+        Query = ["CREATE TABLE ",SName," (",
+                    "owner_id INTEGER, ",
+                    "peer_name_id INTEGER, ",
+                    "peer_server_id INTEGER, ",
+                    "at VARCHAR(20), ",
+                    "count integer",
