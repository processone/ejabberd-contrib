+                        F = get_local_features([], From, To, Nd, Lang),
+                        case F of
+                            {result, [?NS_COMMANDS]} ->
+                                true;
+                            _ ->
+                                false
+                        end
+               end, Nodes),
+    {result, Items ++ Nodes1}.
