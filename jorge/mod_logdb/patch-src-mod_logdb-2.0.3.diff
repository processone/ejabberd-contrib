+   prefix() ++ "settings" ++ suffix(VHost).
+
+users_table(VHost) ->
+   prefix() ++ "users" ++ suffix(VHost).
+servers_table(VHost) ->
+   prefix() ++ "servers" ++ suffix(VHost).
