+             {error, Reason} ->
+                % this can be in clustered environment
+                {match, _, _} = regexp:match(Reason, "#23000"),
+                ?ERROR_MSG("Duplicate key name for ~p", [Server]),
+                update_servers_from_db(DBRef, VHost),
+                [[Id1]] = ets:match(ets_servers_table(VHost), {Server, '$1'}),
