+create_internals(#state{dbref=DBRef, vhost=VHost}) ->
+    sql_query_internal(DBRef, ["DROP PROCEDURE IF EXISTS ",logmessage_name(VHost),";"]),
+    case sql_query_internal(DBRef, [get_logmessage(VHost)]) of
